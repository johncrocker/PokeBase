<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <strong>ID:</strong>
        </div>
        <div class="col-md-8">{{species.id}}</div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <strong>Name:</strong>
        </div>
        <div class="col-md-8">{{species.name}}</div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <strong>Generation:</strong>
        </div>
        <div class="col-md-8">{{species.generationNumber}}</div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <strong>Region:</strong>
        </div>
        <div class="col-md-8">{{species.region}}</div>
    </div>
</div>

<table class="table table-bordered">
    {{#each pokemon}}
    <tr>
        <td>
            <p>
                <strong>{{name}}</strong>
            </p>
            <p>
                <img src="/api/pokemon/{{id}}/image?size=64" />
            </p>
        </td>
        <td>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <strong>ID:</strong>
                    </div>
                    <div class="col-md-8">{{id}}</div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Types:</strong>
                    </div>
                    <div class="col-md-8">{{#each types}} {{this}}{{#unless @last}},{{/unless}} {{/each}}</div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Weight:</strong>
                    </div>
                    <div class="col-md-8">{{weight}}</div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Height:</strong>
                    </div>
                    <div class="col-md-8">{{height}}</div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Base XP:</strong>
                    </div>
                    <div class="col-md-8">{{base_xp}}</div>
                </div>
            </div>
        </td>
    </tr>
    {{/each}}
</table>