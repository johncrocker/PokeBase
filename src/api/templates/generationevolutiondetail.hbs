<div class="panel">
    <p class="title">Evolutions</p>
    <table border="0" cellpadding="0" cellspacing="0">
        {{#each this}}
        <tr>
            {{#each this}}
            <td>
                <a href="pogodetail.html?number={{id}}" title="{{name}}">
                    <div title="{{name}}" class="pogo dex-{{id}}"></div>
                    <small>{{generation}}</small>
                </a>
            </td>
            {{#unless @last}}
            <td>
                <i class="fa fa-arrow-right fa-4 grey" aria-hidden="true" title="Evolves to"></i>
            </td>
            {{/unless}} {{/each}}
        </tr>
        {{/each}}
    </table>
</div>